<div class="container p-3 m-3">
    <div class="erros">
        {{#each erros}}
            <h3>{{texto}}</h3>
        {{/each}}
    </div>
</div>

     <div class="login container">
      <h2 class="text-center text-decoration-underline">Formulário de Edição de Categorias</h2>

      <form action="/categoria/atualizado" class="w-100  d-flex justify-content-center mt-5" method="post">
        <div class="form-grup w-50">
          <label class="form-label my-2" for="">Name:</label>
          <input class="form-control fs-5 my-3 border border-dark" type="text" name="name" value="{{category.name}}">

          <label class="form-label" for="">Slug:</label>
          <input class="form-control fs-5 my-3 border border-dark" type="text" name="slug" value="{{category.slug}}" >

          <button class="btn btn-primary w-100 my-3 fs-5" type="submit">Atualizar categoria</button>
        </div>
      </form>
    </div>
<div class="container w-75 my-5 py-5">
  <a href="/" class="btn btn-primary fs-4">Cancelar</a>
</div>